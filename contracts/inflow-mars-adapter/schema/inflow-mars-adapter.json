    "description": "Standard execute messages that all protocol adapters must implement",
    "oneOf": [
      {
        "description": "Deposit tokens into the protocol Only callable by whitelisted Inflow contracts The coin is sent in info.funds",
        "type": "object",
        "required": [
          "deposit"
        ],
        "properties": {
          "deposit": {
            "type": "object",
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      },
