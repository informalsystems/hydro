        "required": [
          "withdraw"
        ],
        "properties": {
          "withdraw": {
            "type": "object",
            "required": [
              "coin"
            ],
            "properties": {
              "coin": {
                "description": "Coin (denom + amount) to withdraw",
                "allOf": [
                  {
                    "$ref": "#/definitions/Coin"
                  }
                ]
              }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      },
      {
        "description": "Register new Inflow address (admin only)",
        "type": "object",
        "required": [
          "register_inflow"
        ],
        "properties": {
          "register_inflow": {
            "type": "object",
            "required": [
              "inflow_address"
            ],
            "properties": {
              "inflow_address": {
                "description": "New Inflow contract address to register",
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      },
      {
        "description": "Unregister Inflow address (admin only)",
        "type": "object",
        "required": [
          "unregister_inflow"
        ],
        "properties": {
          "unregister_inflow": {
            "type": "object",
            "required": [
              "inflow_address"
            ],
            "properties": {
              "inflow_address": {
                "description": "Inflow contract address to unregister. The account should not have any funds deployed.",
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      },
      {
        "description": "Toggle Inflow address as enabled/disabled (admin only)",
        "type": "object",
        "required": [
          "toggle_inflow_enabled"
        ],
        "properties": {
          "toggle_inflow_enabled": {
            "type": "object",
            "required": [
              "enabled",
              "inflow_address"
            ],
            "properties": {
              "enabled": {
                "type": "boolean"
              },
              "inflow_address": {
                "description": "Inflow contract address to enable or disable",
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      },
      {
        "description": "Update adapter configuration (admin only)",
        "type": "object",
        "required": [
          "update_config"
        ],
        "properties": {
          "update_config": {
            "type": "object",
            "properties": {
              "protocol_address": {
                "description": "New protocol contract address",
                "type": [
                  "string",
                  "null"
                ]
              },
              "supported_denoms": {
                "description": "Updated list of supported denoms (the whole list needs to be provided)",
                "type": [
                  "array",
                  "null"
                ],
                "items": {
                  "type": "string"
                }
              }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    ],
    "definitions": {
      "Coin": {
        "type": "object",
        "required": [
          "amount",
          "denom"
        ],
        "properties": {
          "amount": {
            "$ref": "#/definitions/Uint128"
          },
          "denom": {
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "Uint128": {
        "description": "A thin wrapper around u128 that is using strings for JSON encoding/decoding, such that the full u128 range can be used for clients that convert JSON numbers to floats, like JavaScript and jq.\n\n# Examples\n\nUse `from` to create instances of this and `u128` to get the value out:\n\n``` # use cosmwasm_std::Uint128; let a = Uint128::from(123u128); assert_eq!(a.u128(), 123);\n\nlet b = Uint128::from(42u64); assert_eq!(b.u128(), 42);\n\nlet c = Uint128::from(70u32); assert_eq!(c.u128(), 70); ```",
        "type": "string"
      }
    }
  },
