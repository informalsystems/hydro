    "title": "InstantiateMsg",
    "description": "Message for instantiating the Mars adapter contract",
    "type": "object",
    "required": [
      "admins",
      "mars_contract",
      "supported_denoms"
    ],
    "properties": {
      "admins": {
        "description": "The admins who can update the config",
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "inflow_address": {
        "description": "Optional: single inflow address to whitelist during instantiation",
        "type": [
          "string",
          "null"
        ]
      },
      "mars_contract": {
        "description": "Mars credit manager contract address",
        "type": "string"
      },
      "supported_denoms": {
        "description": "List of supported token denoms (e.g., USDC IBC denom)",
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    },
    "additionalProperties": false
  },
